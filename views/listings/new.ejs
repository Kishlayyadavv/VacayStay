<% layout("/layouts/boilerplate.ejs") %>

<div class="container mt-5">
  <div class="form-card shadow-lg p-5 rounded-4 bg-theme text-theme">
    <h3 class="text-center fw-bold mb-4">üè® List Your Property</h3>

    <form method="POST" action="/listings" novalidate class="needs-validation">
      <!-- Property Title -->
      <div class="mb-4">
        <label for="listing[title]" class="form-label">Property Name</label>
        <input name="listing[title]" type="text" class="form-control form-control-lg rounded-pill" placeholder="Luxury Apartment, Beach Resort..." required />
      </div>

      <!-- Description -->
      <div class="mb-4">
        <label for="listing[description]" class="form-label">Description</label>
        <textarea name="listing[description]" class="form-control rounded-4" rows="3" placeholder="Cozy hilltop stay, Near the beach..." required></textarea>
      </div>

      <!-- Image URL -->
      <div class="mb-4">
        <label for="listing[imageUrl]" class="form-label">Image URL</label>
        <input name="listing[imageUrl]" type="text" class="form-control form-control-lg rounded-pill" placeholder="https://example.com/image.jpg" />
      </div>

      <!-- Price & Country -->
      <div class="row mb-4">
        <div class="col-md-6">
          <label for="listing[price]" class="form-label">Price per Night (‚Çπ)</label>
          <input name="listing[price]" type="number" class="form-control form-control-lg rounded-pill" placeholder="1200" required />
        </div>
        <div class="col-md-6">
          <label for="listing[country]" class="form-label">Country</label>
          <input name="listing[country]" type="text" class="form-control form-control-lg rounded-pill" placeholder="India" required />
        </div>
      </div>

      <!-- Location -->
      <div class="mb-4">
        <label for="listing[location]" class="form-label">City / Location</label>
        <input name="listing[location]" type="text" class="form-control form-control-lg rounded-pill" placeholder="Varanasi, Uttar Pradesh" required />
      </div>

      <!-- Submit -->
      <div class="text-center">
        <button class="btn btn-primary px-5 py-2 rounded-pill shadow-sm">Add Property</button>
      </div>
    </form>
  </div>
</div>

<!-- Theme-Synced Styling -->
<style>
  :root {
    --form-bg: #ffffff;
    --form-text: #2c3e50;
    --input-border: #ced4da;
    --input-focus: #007bff;
    --button-bg: #007bff;
    --button-hover: #0056b3;
  }

  [data-theme="dark"] {
    --form-bg: #1e1e1e;
    --form-text: #f1f1f1;
    --input-border: #444;
    --input-focus: #ffb300;
    --button-bg: #ffb300;
    --button-hover: #cc8400;
  }

  body {
    font-family: 'Poppins', sans-serif;
    background: var(--form-bg);
    color: var(--form-text);
    transition: background-color 0.4s ease, color 0.4s ease;
  }

  .form-card {
    max-width: 700px;
    margin: auto;
    background-color: var(--form-bg);
    color: var(--form-text);
  }

  .form-label {
    font-weight: 500;
    color: var(--form-text);
  }

  .form-control {
    border: 1px solid var(--input-border);
    transition: border-color 0.3s ease, box-shadow 0.3s ease;
  }

  .form-control:focus {
    border-color: var(--input-focus);
    box-shadow: 0 0 5px var(--input-focus);
    background-color: var(--form-bg);
    color: var(--form-text);
  }

  .btn-primary {
    background: var(--button-bg);
    border: none;
    font-size: 16px;
    transition: background 0.3s ease, transform 0.2s ease;
  }

  .btn-primary:hover {
    background: var(--button-hover);
    transform: scale(1.02);
  }

  .form-control::placeholder {
    color: #aaa;
  }

  [data-theme="dark"] .form-control::placeholder {
    color: #777;
  }
</style>
